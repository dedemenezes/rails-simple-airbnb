<h1>Simple Airbnb</h1>

<div class="cards">
  <% @flats.each do |flat| %>
    <div class="card-trip">
      <div class="card-trip-infos">
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>   
      </div>
        <div class="card-footer-mine">
         <i class="fas fa-user-friends"><%= flat.number_of_guests %></i>
         <i class="fab fa-bitcoin"><%= flat.price_per_night %></i>
        </div>
    </div>
    <div class="user-actions">
      <%= link_to "More info", flat_path(flat)%>
      <%= link_to "Edit", edit_flat_path(flat) %>
      <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: 'Are you sure?' } %>
    </div>
  <% end %>
</div>
